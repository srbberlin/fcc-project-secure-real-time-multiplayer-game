{
  "name": "secure-real-time-multiplayer-game",
  "version": "1.0.0",
  "description": "Information Security 5: Secure Real-Time Multiplayer Game",
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "test/*",
      "routes/*",
      "public"
    ],
    "watch": [
      "src/**/*"
    ]
  },
  "scripts": {
    "start": "nodemon ./server.js",
    "build": "rollup -c -w",
    "test": "PORT=3005 mocha --require @babel/register --recursive --exit --ui tdd tests/"
  },
  "jshintConfig": {
    "esversion": 8,
    "asi": true
  },
  "eslintConfig": {
    "parserOptions": {
      "env": {
        "es6": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs": "*",
    "helmet": "^3.21.3",
    "jsdom": "^16.2.0",
    "jsonfile": "^4.0.0",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "socket.io": "^4.1.1",
    "socket.io-client": "^4.1.1"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.14",
    "rollup": "^2.45.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "connect-livereload": "^0.6.1",
    "eslint": "^7.25.0",
    "jshint": "^2.12.0",
    "livereload": "^0.9.3"
  }
}
